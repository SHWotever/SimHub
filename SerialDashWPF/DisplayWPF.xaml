            <local:Letter x:Name="displayLetter4" Height="{Binding Path=ActualHeight, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type StackPanel}}}" />
            <local:Letter x:Name="displayLetter5" Height="{Binding Path=ActualHeight, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type StackPanel}}}" />
            <local:Letter x:Name="displayLetter6" Height="{Binding Path=ActualHeight, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type StackPanel}}}" />
            <local:Letter x:Name="displayLetter7" Height="{Binding Path=ActualHeight, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type StackPanel}}}" />
        </StackPanel>
    </Grid>
</UserControl>