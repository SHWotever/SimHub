        Background="#FF383838">
    <Grid Margin="0,0,1,1" x:Name="PixelGrid">
        <Grid.Background>
            <RadialGradientBrush>
                <GradientStop Color="#FFFF0202" Offset="0" />
                <GradientStop Color="#FFFF1A1A" Offset="1" />
            </RadialGradientBrush>
        </Grid.Background>
    </Grid>
</UserControl>